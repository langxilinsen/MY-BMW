<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/around_imageView1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/icon_home_1" 
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/around_complany_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="动力汽车服务" />
        
        <TextView
            android:id="@+id/around_complany_scope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:text="洗车，美容，装潢，轮胎，保养，快修" />

         <RatingBar
            android:id="@+id/around_complany_start"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true" style="?android:attr/ratingBarStyleSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
             >

            <TextView
                android:id="@+id/around_complany_address"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="西溪路加油站斜对面西溪路加油站斜对面" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" >

                <TextView
                    android:id="@+id/around_complany_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:gravity="right"
                    android:text="3.5km" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/location" />
            </RelativeLayout>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>