<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/bgolor">

    <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/myRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/rating_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ems="10" 
        android:textColor="#555555"
        android:text="5分满，您对XX的评分为："/>

    <EditText
        android:id="@+id/rating_comments"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="top"
        android:layout_gravity="center"
        android:hint="写点评论吧，5~70个字哦"
        android:maxLength="200"
         />
    
    <Button 
        android:id="@+id/rating_btn"
        android:background="@drawable/button_style_orange"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:text="确认提交"
        />

</LinearLayout>