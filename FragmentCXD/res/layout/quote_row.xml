<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="190dp"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/quote_image"
            android:layout_width="140dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_sidertitle" >
        </ImageButton>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/quote_name"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="杭州小拇指精品汽修"
                android:textColor="#666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quote_scope"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="洗车,美容，打蜡，保养" />

			<RatingBar
                android:id="@+id/quote_star"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="2.5" >
            </RatingBar>
          

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/quote_adress"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:text="华星路99号" />

                
                <TextView
                    android:id="@+id/quote_distance"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:gravity="right"
                    android:text="2.54km" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/icon_location_2x" >
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/bgolor"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_home_3" >
        </ImageView>

        <TextView
            android:id="@+id/quote_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:paddingRight="80dp"
            android:text="478.50"
            android:textColor="#ff6600"
            android:textSize="30sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="@drawable/button_style_orange"
            android:text="保存计划"
            android:textColor="#444444" >
        </Button>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa" />

</LinearLayout>